<p class="text-blue-700 text-2xl font-bold">
<%= link_to 'Add new listing', new_rental_path %>
</p>
<div class="w-2/3 ml-32 bg-gray-200 border-2 border-black h-60">
  <div class="p-4">
    <% obj.each do |rental| %>
    <div class="shadow-2xl m-3">
      <div class="p-2">
        <h4 class="text-3xl text-teal-700 font-bold"><b><%= link_to rental.title, rental_path(rental) %></b></h4>
        <p><%= truncate(rental.description, length: 100) %></p>
        <p><%= rental.id %></p>
                <small>Created by: <%= rental.user.username if rental.user%>, <%= time_ago_in_words(rental.created_at)%> ago,
        last updated: <%= time_ago_in_words(rental.updated_at) %> ago</small>
      </div>
    </div>      
  <% end %>
  </div>
</div>