<%= form_for @rental do |f| %>
  <% if @rental.errors.any? %>
    <h2>you encountered the following errors</h2>
    <ul>
        <% @rental.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul> 
  <% end %>

<P>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description%>
    <%= f.text_area :description %>
</p>
<br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "text-teal-700"){cb.check_box(class: "check") + cb.text} %>
<% end %>
<br>
    <%= f.submit "submit" %>
<% end %>