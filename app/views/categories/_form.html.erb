
<%= form_for @category do |f| %>
  <% if @category.errors.any? %>
    <h2>you encountered the following errors</h2>
    <ul>
        <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul> 
  <% end %>

<P>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>
<br>
    <%= f.submit "submit" %>
<% end %>
