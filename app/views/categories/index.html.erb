<p class="text-blue-700 text-3xl font-bold">
all categories list
</p>
      <% if logged_in? %>
        <%= link_to 'add categories', new_category_path, class:"block mt-4 lg:inline-block lg:mt-0 text-teal-700 font-bold hover:text-blue-700 mr-4"%>
      <% end %>
<div class="w-2/3 ml-32 bg-gray-200 border-2 border-black h-60">
  <div class="p-4">
    <% Category.all.each do |category| %>
    <div class="shadow-2xl m-3">
      <div class="p-2">
        <h4><b><%= link_to category.name, category_path(category) %></b></h4>
        <small><%= pluralize(category.rentals.count, "rentals") %></small>
        <% if logged_in? && current_user.admin? %>
          <p><%= link_to 'edit', edit_category_path(category) %></p>
          <p><%= link_to 'delete category', category_path(category), method: :delete,data: { confirm: 'Are you sure you want to delete the category and all of their rentals?' } %></p>
        <% end %>        
      </div>
    </div>      
  <% end %>
  </div>
</div>